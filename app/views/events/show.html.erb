  <div class='container'>
    <div class="event-text">
      <h1><%= @event.title %></h1>
      <h5 class="calendar">
        Ends on
        <i class="far fa-calendar-alt", style="padding-left: 5px; padding-right: 5px"></i>
        <strong>
          <%= @event.end_date.strftime("%m.%d.%Y") %>
        </strong>
        (<%= (@event.end_date.to_datetime - Date.today).to_i %> days left)
      </h5>
      <div class="mt-4">
        <h5>Event description</h5>
        <p><%= @event.description %></p>
      </div>
    </div>

    <%= render('events/technical_container')  %>
    <div class='d-flex justify-content-center m-3'>
      <%= link_to("Back to Events", events_path, class: "button-main") %>
    </div>



  <div class="d-flex justify-content-between">
    <div class="row">
      <% @data.each do |new| %>
        <div class="col">
          <div class="card mx-auto" style="width: 18rem; height: 200px; margin-bottom: 8px;">
            <div class="card-body" style='overflow: auto;'>
              <h5 class="card-title"> <%= new['title'] %></h5>
              <h6 class="card-subtitle mb-2 text-muted"> <%= new['source'] %> </h6>
              <p class="card-text"> <%= new['description'] %></p>
              <a href="<%= new['url'] %>" class="card-link"> Access this article</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
