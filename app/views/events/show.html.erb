
<div class="show-container">
  <div class="descriptive-content">
    <h1><%= @event.title %></h1>
    <h5 class="end-date-info">
      Ends on
      <i class="far fa-calendar-alt", style="padding-left: 10px; padding-right: 5px"></i>
      <strong>
        <%= @event.end_date.strftime("%m/%d/%Y") %>
      </strong>
      (<%= (@event.end_date.to_datetime - Date.today).to_i %> days left)
    </h5>
    <div class="event-description">
      <h3>Event description</h3>
      <p><%= @event.description %></p>
    </div>
  </div>
  <%= render('technical_container')  %>
  <%= link_to("Back to Events", events_path, class: "button-main") %>
</div>

<div class="container">
  <div class="row">
    <% @data.each do |new| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"> <%= new['title'] %></h5>
            <h6 class="card-subtitle mb-2 text-muted"> <%= new['source'] %> </h6>
            <p class="card-text"> <%= new['description'] %></p>
            <a href="<%= new['url'] %>" class="card-link"> Acces this article</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
