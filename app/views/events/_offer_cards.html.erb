<% @offers.each do |offer| %>
  <div class="card-offer">
    <p>
      <strong><%= offer.seller.username %></strong>
      is offering
      <strong><%= offer.n_actions %></strong>
      actions for
      <strong><%= '%.2f' % offer.price %></strong>
      coins.
    </p>
    <%# TODO: IMPLEMENT THE LOGIC OF BUY BUTTON %>
    <%= link_to('Buy', edit_event_transaction_path(@event, offer), class: "buy") %>
  </div>
<% end %>
