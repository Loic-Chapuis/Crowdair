<div class="container">
  <div>
    <h1>Crowdair</h1>
    <h2>list of all available events:</h2>
  </div>
  <div>
    <% @events.each do |event| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="">
              <h2><%= event.title %></h2>
              <p> <%= event.description %> </p>
          </div>
            <%= link_to "More infos", event_path(event.id), class:"button-main mr-2" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
