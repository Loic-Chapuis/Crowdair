<div class="container">
  <div>
    <div class="index-header-content">
      <h2 class="mt-4 mb-3"> Start to trade</h2>
    </div>
  </div>
    <div class="row">
    <% @events.each do |event| %>
    <div class="col-12 col-md-4">
      <div class="card-products">
        <img src="<%= event.img_url %>", class="card-product-img" />
        <div class="title">
          <%= link_to event.title, event_path(event.id) %>
        </div>
        <div class="events-data-badge">
          <div class="badge-value">
            Likelihood to happen
            <strong class="current-price"><%= "#{event.transactions.where.not(buyer_id: nil).last.price}%" %></strong>

          </div>
          <div class="badge-change">
            Last hour change
            <%
              diff = event.last_hour_change
              if diff == 0
                badge_class = 'badge-secondary'
                sign = '+'
              elsif diff > 0
                badge_class = 'badge-success'
                sign = '+'
              else
                badge_class = 'badge-danger'
                sign = ''
              end
            %>
            <span style="margin: 0px 5px;" class="badge <%= badge_class %>"><%= sign %><%= "#{diff} %" %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
