<div class="points-content col-12 col-lg-8">
  <div class="points-graph-container flex-container">
    <div class="buttons-chart">
      <button id="set-day" class="btn-timing highlighted">All-time</button>
      <button id="set-hour" class="btn-timing">Last 4 hours</button>
    </div>
    <div class="graph-wrapper" id="chart-all">
      <%= line_chart(@portfolio_values, ytitle: "Portfolio valuation", curve: false, points: false, colors: ["#fa7b2d"] ) %>
    </div>
    <div id="chart-1h" class="graph-wrapper hidden-chart">
      <%= line_chart(@portfolio_values_1h, ytitle: "Portfolio valuation", curve: false, points: false, colors: ["#fa7b2d"] ) %>
    </div>
  </div>
</div>

<div class="ranking-content flex-container col-12 col-lg-4">
  <div class="points-info flex-container">
    <div class="stats-table">
      <table>
        <tr>
          <td>Coins value</td>
          <td><%= @user.points %></td>
        </tr>
        <tr>
          <td>Actions value</td>
          <td>+<%= @portfolio_values.empty? ? '-' : @portfolio_values.last[1] - @user.points %></td>
        </tr>
        <tr>
          <td>Portfolio valuation</td>
          <td><%= @portfolio_values.empty? ? @user.points : @portfolio_values.last[1] %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="points-info flex-container">
    <p class="ranking-info">Ranking</p>
    <strong id="user-ranking"><%= @ranking_position %> / <%= @total_participants %></strong>
    <%= image_tag('podium-blue.png', id:'podium-icon') %>
    <%= link_to('View Leaderboard', ranking_path, class: "button-classy leaderboard-btn") %>
  </div>
</div>
