<div class="container">
  <div class="">

    <h2>Edit my profile</h2>

    <%= simple_form_for(@user, url: registration_path(@user), html: { method: :put }, class: "form-edit") do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true %>
        <%= f.input :username,
                    hint: "Type your new username",
                    required: false,
                    input_html: { autocomplete: "Username" } %>
        <%= f.input :current_password,
                    hint: "Current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>

      <div class="form-actions">
        <%= f.button :submit, "Update", class:"button-main" %>
      </div>
    <% end %>

    <h6>Unhappy? <%= link_to "Delete my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></h6>

    <%= link_to "Back to Dashboard", user_path(current_user) %>
  </div>
</div>
