<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to "/", class: "navbar-brand d-flex align-items-center" do %>
    <p class="navbar-title"> CROWDAIR </p>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <div class="navbar-links">
          <li class="nav-item active">
            <a href="/events"> Events <i class="fas fa-calendar-alt"></i></a>
          </li>
          <li class="nav-item active">
            <a href="/users/id"> Dashboard <i class="fas fa-chart-line"></i></a>
          </li>
        </div>
        <div class="navbar-info">
          <li class="nav-item active">
            <a href="/users/id"> <%= "#{current_user.points}" %> <i class="fas fa-coins"></i></a>
          </li>
          <li class="nav-item active">
            <a href="/users/id"> <%= "#{current_user.username}" %> <i class="fas fa-user"></i></a>
          </li>
        </div>


        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar, class: "avatar1 dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit my profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link button-classy" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
